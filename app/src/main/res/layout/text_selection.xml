<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/text_selection_general_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text_to_choose1"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/text_selection_textView_top_margin"
        android:text="@string/text_1"
        android:onClick="onAnswerChosen"
        android:textAppearance="@style/ChooseText"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text_to_choose2"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/text_selection_textView_top_margin"
        android:text="@string/text_2"
        android:onClick="onAnswerChosen"
        android:gravity="center"
        android:textAppearance="@style/ChooseText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text_to_choose3"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/text_selection_textView_top_margin"
        android:text="@string/text_3"
        android:onClick="onAnswerChosen"
        android:gravity="center"
        android:textAppearance="@style/ChooseText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text_to_choose4"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/text_selection_textView_top_margin"
        android:text="@string/text_4"
        android:onClick="onAnswerChosen"
        android:gravity="center"
        android:textAppearance="@style/ChooseText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text_to_choose5"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/text_selection_textView_top_margin"
        android:text="@string/text_5"
        android:onClick="onAnswerChosen"
        android:gravity="center"
        android:textAppearance="@style/ChooseText"/>

</LinearLayout>