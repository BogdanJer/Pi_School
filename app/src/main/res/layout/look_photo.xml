<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".model.LookPhotoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/medium_margin"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_word_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <ImageButton
            android:id="@+id/favorite_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/download_photo"
            android:onClick="addToFavorite"
            android:src="@drawable/star_empty" />

        <ImageButton
            android:id="@+id/download_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="savePhoto"
            android:src="@drawable/download" />

    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/web_page"
        android:layout_weight="14" />
</LinearLayout>